            </div>
            <!-- header__three-columns -->
        </div>
        <!-- /header -->
        <!-- results -->
        <div class="results">
            <div class="results__wrapper">
                {{#if failData.summaryWelsh.present}}
                    {{~> views/CommercialVehicles/reasonsForRejection failData.summaryWelsh}}
                {{/if}}
                {{#if failData.dangerousWelsh.present}}
                    {{~> views/CommercialVehicles/reasonsForRejection failData.dangerousWelsh}}
                {{/if}}
                {{#if failData.majorWelsh.present}}
                    {{~> views/CommercialVehicles/reasonsForRejection failData.majorWelsh}}
                {{/if}}
                {{#if failData.minorWelsh.present}}
                    {{~> views/CommercialVehicles/reasonsForRejection failData.minorWelsh}}
                {{/if}}
                {{#if failData.advisoryWelsh.present}}
                    {{~> views/CommercialVehicles/reasonsForRejection failData.advisoryWelsh}}
